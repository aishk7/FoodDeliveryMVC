@model FoodItem

<div class="col-sm-4">
    <div class="card-deck">
        <div class="card shadow">
            <img class="card-img-top img-thumbnail" src="@Model.ImgURL" style="width:100%; height:300px"/>
            <div class="card-body">
                <h3 class="pull-right">&#8377 @Model.Price</h3>
                <h4 class="card-title">@Model.ItemName</h4>
                <p class="card-text">@Model.Details</p>
                <a class="lnk btn btn-success btn-block" asp-controller="Cart" asp-action="AddToCart" asp-route-ItemId="@Model.ItemId">Add to Cart</a>
            </div>
        </div>
    </div>

</div>